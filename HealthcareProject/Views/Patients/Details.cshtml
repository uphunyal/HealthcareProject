        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ssn)
        </dt>
        <dd class="col-sm-10">
