{
<div>

    <h4>Your Details</h4>
    <hr />
    <h3> Personal information</h3>
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PatientEmail)
        </dt>
        <dd class="col-sm-10">
