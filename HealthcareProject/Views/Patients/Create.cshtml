@model HealthcareProject.Models.Patient

@{
    ViewData["Title"] = "Create";
}



<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @if (User.IsInRole("Staff"))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PatientName" class="control-label"></label>
                    <input asp-for="PatientName" class="form-control" required />
                    <span asp-validation-for="PatientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientEmail" class="control-label"></label>
                    <input asp-for="PatientEmail" class="form-control" required />
                    <span asp-validation-for="PatientEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientAddress" class="control-label"></label>
                    <input asp-for="PatientAddress" class="form-control" required />
                    <span asp-validation-for="PatientAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ssn" class="control-label"></label>
                    <input asp-for="Ssn" class="form-control" />
                    <span asp-validation-for="Ssn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Insurance" class="control-label"></label>
                    <input asp-for="Insurance" class="form-control" />
                    <span asp-validation-for="Insurance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            }
            @if (User.IsInRole("Doctor") || User.IsInRole("Nurse"))
            {

                <div class="form-group">
                    <label asp-for="Weight" class="control-label"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Height" class="control-label"></label>
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bloodpressure" class="control-label"></label>
                    <input asp-for="Bloodpressure" class="form-control" />
                    <span asp-validation-for="Bloodpressure" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pulse" class="control-label"></label>
                    <input asp-for="Pulse" class="form-control" />
                    <span asp-validation-for="Pulse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AppointmentMisused" class="control-label"></label>
                    <input hidden asp-for="AppointmentMisused" class="form-control" disabled value=0 />
                    <span asp-validation-for="AppointmentMisused" value="" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Allergy" class="control-label"></label>
                    <input asp-for="Allergy" class="form-control" />
                    <span asp-validation-for="Allergy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>}
        </form>
    </div>
</div>
@if (User.IsInRole("Staff"))
{
    <div>
        <a asp-action="Index">Back to Patient List</a>
    </div>}
@if (User.IsInRole("Doctor")|| User.IsInRole("Nurse"))
{
    <div>
        <a asp-controller= "VisitRecords" asp-action="Index">Back to My Appointments</a>
    </div>}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
