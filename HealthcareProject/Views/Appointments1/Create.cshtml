@model HealthcareProject.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApptDate" class="control-label"></label>
                @* <input asp-for="ApptDate" class="form-control" />
            <span asp-validation-for="ApptDate" class="text-danger"></span>*@
                <select asp-validation-for="ApptDate" asp-items="ViewBag.ApptDate" class="form-control" asp-for="ApptDate"></select>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentReason" class="control-label"></label>
                <input asp-for="AppointmentReason" class="form-control" required />
                <span asp-validation-for="AppointmentReason" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Patient"))
            {
                <div class="form-group">
                    <label asp-for="PatientEmail" class="control-label">Email</label>
                    <input asp-for="PatientEmail" class="form-control" required />
                    <span asp-validation-for="PatientEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PatientId" class="control-label"></label>
                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId" disabled><option selected value=""> No patient ID</option></select>
                </div>}
            else
            { <div class="form-group">
                    <label asp-for="PatientEmail" class="control-label">Email</label>
                    <input asp-for="PatientEmail" class="form-control" required />
                    <span asp-validation-for="PatientEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PatientId" class="control-label"></label>
                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="VisitRecord" /> @Html.DisplayNameFor(model => model.VisitRecord)
                    </label>
                </div>
            }

            
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

