@model IEnumerable<HealthcareProject.Models.Nurse>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NurseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NurseEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NurseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NurseEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.DoctorEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NurseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NurseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NurseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
